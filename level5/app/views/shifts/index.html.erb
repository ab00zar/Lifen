<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <p id="notice"><%= notice %></p>

    <h1>Shifts</h1>

    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>ID</th>
          <th>Planning</th>
          <th>Worker</th>
          <th>Start date</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @shifts.each do |shift| %>
          <tr>
            <td><%= shift.id %></td>
            <td><%= shift.planning_id %></td>
            <td><%= shift.worker_id %></td>
            <td><%= shift.start_date %></td>
            <td><%= link_to 'Show', shift %></td>
            <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
            <td><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Shift', new_shift_path %>
  </div>
</div>